<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/textPrimaryOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">#B0B0B0</item>
    </style>
    <style name="functionImageViewStyle">
        <item name="android:layout_width">@dimen/functionImageView</item>
        <item name="android:layout_height">@dimen/functionImageView</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>
    <style name="textFunctionSection">
        <item name="android:textSize">@dimen/text_size_extra_large</item>"
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    <style name="sectionCardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:layout_width">@dimen/functionSection</item>
        <item name="android:layout_height">@dimen/functionSection</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    <style name="KeypadButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#F2F2F2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
    </style>
    <!-- Style cho hình tròn -->
    <style name="CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <!-- Style cho Card -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
    </style>
    <style name="KeypadButtonDark" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:backgroundTint">@color/cardBackgroundColor</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>
</resources>